<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_product_small_card_view"
    app:cardCornerRadius="12dp"
    android:elevation="8dp"
    android:layout_marginEnd="20dp"
    android:padding="20dp"
    android:background="@drawable/background_drawable_searchview">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/item_product_small_product_image"
            android:src="@drawable/medicine"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/item_product_small_product_image"
            android:padding="8dp">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_product_small_product_name"
                tools:text="Medicine"
                android:textSize="24sp"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_product_small_product_quantity"
                tools:text="20pcs"
                android:layout_marginStart="10dp"
                android:textSize="16sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/item_product_small_product_price"
                tools:text="@string/price"
                android:textSize="20sp"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>

        </LinearLayout>



    </RelativeLayout>

</androidx.cardview.widget.CardView>